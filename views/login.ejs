        <!-- {{!-- REGISTER FORM --}} -->
        <form action="/register" method="post" class="login_form" id="form2">
            <div class="imgcontainer">
                <img src="Images/IMGP1/avatar.svg" alt="Avatar" class="avatar">
            </div>

            <div class="container2">
                <div class="row">
                    <div class="col-md-4">
                        <label for="firstName"><b>First Name:</b></label>
                        <input type="text" placeholder="Enter your first name" name="firstName" required>
                    </div>

                    <div class="col-md-4">
                        <label for="lastName"><b>Last Name:</b></label>
                        <input type="text" placeholder="Enter your last name" name="lastName" required>
                    </div>

                    <div class="col-md-4">
                        <label for="username"><b>Username:</b></label>
                        <input type="text" placeholder="Enter your username" name="username" required>
                    </div>

                    <div class="col-md-8">
                        <label for="email"><b>Email:</b></label>
                        <input type="email" placeholder="Enter yor E-mail ID" name="email" required>
                    </div>



                    <div class="col-md-4">
                        <label for="contact"><b>Contact No. :</b></label>
                        <input type="number" placeholder="Enter your contact number" name="contact" minlength="10"
                            maxlength="10" required>
                    </div>

                    <div class="col-md-6">
                        <label for="password"><b>Password:</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>
                    </div>

                    <div class="col-md-6">
                        <label for="confirmPassword"><b>Confirm Password:</b></label>
                        <input type="password" placeholder="Re-enter Password" name="confirmPassword" required>

                    </div>

                    <div class="row col-md-4">
                        <label for="gender"><b>Gender:</b></label>
                        <div class="row col-md-4" id="gen">
                            <div class="col-md-4 text-center">
                                <label for="male"><b>Male</b></label>
                                <input type="radio" name="gender" id="male" value="Male">
                            </div>
                            <div class="col-md-4 text-center" style="
                            padding-left: 8px;
                            padding-right: 8px;">
                                <label for="female"><b>Female</b></label>
                                <input type="radio" name="gender" id="female" value="Female">
                            </div>
                            <div class="col-md-4 text-center">
                                <label for="other"><b>Other</b></label>
                                <input type="radio" name="gender" id="other" value="Other">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4" id="age"><label for="age"><b>Age:</b></label>
                        <input type="number" placeholder="Enter your age" name="age" min="18" required>
                    </div>
                    <div class="col-md-4">
                        <label for="city"><b>City:</b></label>
                        <input type="text" placeholder="Enter your city" name="city" required>
                    </div>
                </div>

            </div>

            <button id="button2" type="submit">Register</button>
            <!-- <label class="remember">
